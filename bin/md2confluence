#!/usr/bin/env node

const docopt = require('docopt');
const options = docopt.docopt(`
Usage:
  markdown-to-confluence [--force] [--config=<path>]

Options:
  --force           always upload even if the file looks the same
  --config=<path>   specify the path to the config
`);

const md2confluence = require('../dist/index');
md2confluence.md2confluence(options['--config'], options['--force'])
  .then()
  .catch(e  => {
    console.error(e);
    process.exit(1);
  }
);
